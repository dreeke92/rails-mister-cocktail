<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), :class => "btn btn-primary btn-lg" %>
  </div>
</div>

<h3>Doses</h3>
<ul>
  <% @doses.each do |dose| %>
    <li>
      <b><%= dose.ingredient.name %>: </b>  <%= dose.description %>
      <p><%= link_to "Delete dose ingredient", cocktail_dose_path(dose.cocktail, dose), method: :delete %></p>
    </li>
  <% end %>
</ul>

<%= link_to "Back", cocktails_path %>
